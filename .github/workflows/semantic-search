name: Build Semantic Index

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: pip install pymupdf sentence-transformers faiss-cpu

      - name: Extract PDF text
        run: python3 extract_texts.py

      - name: Build vector index
        run: python3 build_index.py
